<Window x:Class="SectionsEC.Views.LoadCasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SectionsEC.Views"
        mc:Ignorable="d"
        Title="LoadCasesWindow" Height="300" Width="300">
    <GroupBox Header="Load Cases">
        <DataGrid
            Name="dataGridPoints"
                    AutoGenerateColumns="False"
                    CanUserAddRows="True"
                    ColumnWidth="*"
                    ItemsSource="{Binding LoadCases,Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=X,UpdateSourceTrigger=LostFocus,Mode=TwoWay}"/>
                <DataGridTextColumn Header="Axial Force [kN]" Binding="{Binding Path=Y,UpdateSourceTrigger=LostFocus,Mode=TwoWay}"/>
            </DataGrid.Columns>
        </DataGrid>
    </GroupBox>
</Window>
