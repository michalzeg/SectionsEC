<UserControl x:Class="SectionsEC.Views.LeftPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SectionsEC.Views"
             xmlns:helpers="clr-namespace:SectionsEC.Helpers"
             mc:Ignorable="d" 
             >
    <DockPanel LastChildFill="True">
        <GroupBox 
            Header="Load Case"
            DockPanel.Dock="Top">
            <StackPanel>
                <TextBlock Text="Name:"/>
                <ComboBox
                    ItemsSource="{Binding LoadCaseList}"
                    SelectedItem="{Binding SelectedLoadCase}"
                    DisplayMemberPath="Name"></ComboBox>
                <TextBlock>
                    <Run Text="Axial Force="/>
                    <Run Text="{Binding NormalForce,StringFormat={}{0:#.##}}"/>
                    <Run Text=" [kN]"/>
                </TextBlock>
            </StackPanel>
        </GroupBox>
        
    </DockPanel>
</UserControl>
